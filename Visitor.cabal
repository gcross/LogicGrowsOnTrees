Library
    Build-depends:
        AbortT-transformers == 1.0.*,
        AbortT-monadstf == 1.0.*,
        base > 4 && < 5,
        bytestring >= 0.9 && < 0.11,
        cereal == 0.3.*,
        composition >= 0.2 && < 1.1,
        containers >= 0.4 && < 0.6,
        data-accessor == 0.2.*,
        data-accessor-template == 0.2.*,
        data-accessor-monads-tf == 0.2.*,
        data-ivar == 0.30.*,
        derive >= 2.5.11 && < 2.6,
        directory >= 1.1 && < 1.3,
        dlist == 0.5.*,
        either-unwrap == 1.1.*,
        filepath == 1.3.*,
        FindBin == 0.0.*,
        higherorder == 0.0.*,
        hslogger == 1.2.*,
        hslogger-template == 2.0.*,
        MonadCatchIO-transformers == 0.3.*,
        monads-tf == 0.1.*,
        operational == 0.2.*,
        optparse-applicative == 0.5.*,
        process == 1.1.*,
        PSQueue == 1.1.*,
        sequential-index == 0.2.*,
        stm >= 2.3 && < 2.5,
        transformers >= 0.2 && < 0.4,
        yjtools >= 0.9.7 && < 0.10
