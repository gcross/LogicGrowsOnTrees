        Control.Visitor
        Control.Visitor.Checkpoint
        Control.Visitor.Examples.Queens
        Control.Visitor.Examples.Queens.Implementation
        Control.Visitor.Label
        Control.Visitor.Main
        Control.Visitor.Parallel.Process
        Control.Visitor.Parallel.Processes
        Control.Visitor.Parallel.Threads
        Control.Visitor.Parallel.Workgroup
        Control.Visitor.Path
        Control.Visitor.Supervisor
        Control.Visitor.Supervisor.RequestQueue
        Control.Visitor.Utils.MonadStacks
        Control.Visitor.Worker
        Control.Visitor.Workload
    Extensions:

Flag build-nqueens-executables
    Description: Enable building the n-queens executables.
    Default:     False

Executable count-all-nqueens-solutions-using-threads
    Main-is: count-all-nqueens-solutions-using-threads.hs
    if flag(build-nqueens-executables)
        Buildable: True
    else
        Buildable: False
    GHC-Options: -threaded

Executable count-all-nqueens-solutions-using-processes
    Main-is: count-all-nqueens-solutions-using-processes.hs
    if flag(build-nqueens-executables)
        Buildable: True
    else
        Buildable: False

Test-Suite tests
    Type:       exitcode-stdio-1.0
    Main-is:    tests.hs
    Build-depends:
        HUnit == 1.2.*,
        random == 1.0.*,
        QuickCheck >= 2.4 && < 2.6,
        quickcheck-instances == 0.3.*,
        test-framework >= 0.6 && < 0.9,
        test-framework-hunit >= 0.2 && < 0.4,
        test-framework-quickcheck2 >= 0.2 && < 0.4,
        uuid == 1.2.*

Test-Suite test-nqueens
    Type:       exitcode-stdio-1.0
    Main-is:    test-nqueens.hs
    Build-depends:
        HUnit == 1.2.*,
        QuickCheck >= 2.4 && < 2.6,
        test-framework >= 0.6 && < 0.9,
        test-framework-hunit >= 0.2 && < 0.4,
        test-framework-quickcheck2 >= 0.2 && < 0.4
